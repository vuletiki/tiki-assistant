{
  "name": "Tiki Assistant",
  "description": "Giúp bạn tìm thấy sản phẩm tốt nhất từ Tiki",
  "version": "1.3",
  "browser_action": {
    "default_icon": "images/32x32.png",
    "icons": {
      "16": "images/16x16.png",
      "32": "images/32x32.png",
      "48": "images/48x48.png",
      "128": "images/128x128.png"
    }
  },
  "homepage_url": "http://tiki.vn",
  "author": "Tiki",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "all_frames": false,
      "matches": [
        "<all_urls>"
      ],
      "css": ["content.css"],
      "js": ["content.js"]
   	}
  ],
  "icons": {
    "16": "images/16x16.png",
    "32": "images/32x32.png",
    "48": "images/48x48.png",
    "128": "images/128x128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' 'sha256-Df+dDHFxr0rmR4yuH+pFjPKq2ak4/Lztt8gjWODGi20='",
  "web_accessible_resources": [
    "frame.html"
  ],
  "manifest_version": 2
}